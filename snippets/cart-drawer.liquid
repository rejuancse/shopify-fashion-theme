<!-- This example requires Tailwind CSS v2.0+ -->
<div id="header-cart-popup" class="fixed inset-0 overflow-hidden z-20" style="display: none">
    <div class="absolute inset-0 overflow-hidden">

        <div class="absolute inset-0 bg-gray-500 bg-opacity-75"  onclick="headerCartPopup()"></div>

        <div class="fixed inset-y-0 right-0 max-w-full flex">

            <div class="relative w-screen max-w-xs md:max-w-md">
                <div class="absolute top-0 left-0 -ml-8 pt-4 pr-2 flex sm:-ml-10 sm:pr-4">
                    <button type="button" onclick="headerCartPopup()" class="rounded-md text-white hover:text-white focus:outline-none focus:ring-2 focus:ring-white">
                        <span class="sr-only">Close panel</span>
                        <!-- Heroicon name: outline/x -->
                        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>

                <div class="h-full flex flex-col bg-white shadow-xl overflow-y-scroll" x-ref="cart_content">
                    {% render 'cart-form' %}
                </div>
            </div>
        </div>
    </div>
</div>
